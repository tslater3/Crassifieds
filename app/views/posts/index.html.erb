<body>

  <div class = 'top-container'>
    <div class = 'headline'>
      <h1>Posts</h1>
    </div>
  </div>
  <p class = 'links'><%= link_to 'Make a New Ad', new_post_path %></p>
    <% @posts.each do |post| %>
      <h2>Title: <%= post.title %></h2>
      <h3>Author: <%= post.author %></h3>
      <p>Body: <%= post.body %></p>
  <div class = 'links'>
    <%= link_to 'Show Ad', post_path(post) %>
    <%= link_to 'Edit Ad', edit_post_path(post) %>
    <%= link_to 'Delete Ad', post, method: :delete %>
  </div>
  <% end %>
  <br><br><br><br>
    <%= link_to 'Home', root_path %>

</body>
